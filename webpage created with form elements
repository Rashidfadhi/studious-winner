    }
    .button:hover{
      background: linear-gradient(var(--spin),red,tomato,orange);
      animation: spin 1s ease-in infinite;
        
    }
    
    @property --spin{
        syntax: "<angle>";
        inherits: false;
        initial-value: 30deg;
    }
    @keyframes spin{
     from{
      --spin:360deg
     }
    
    }
    .button::before,
    .button::after{
        content: '';
